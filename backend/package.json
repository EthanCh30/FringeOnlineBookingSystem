{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.png src/**/*.jpg src/**/*.json dist/",
    "start": "NODE_ENV=production node dist/index.js",
    "start:win": "set NODE_ENV=production&& node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "ts-node src/seeder.ts",
    "seed:standalone": "ts-node src/scripts/runSeeder.ts",
    "seed:prod": "node dist/seeder.js",
    "seed:prod:standalone": "node dist/scripts/runSeeder.js",
    "clean": "rimraf dist",
    "build:prod": "npm run clean && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
